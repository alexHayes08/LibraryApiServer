{
  "name": "library-api-server",
  "version": "1.0.0",
  "description": "A server (no front-end provided) that runs a check-in check-out style service for resources.",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "keywords": [
    "library"
  ],
  "author": "alex.c.hayes08@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/node": "^10.3.3",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "nodemon": "^1.17.5",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "firebase-admin": "^5.12.1",
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.12",
    "winston": "^3.0.0"
  }
